package com.nestjavatraining.utiliy;

import java.util.Scanner;

import com.nestjavatraining.entity.Account;
import com.nestjavatraining.service.AccountService;

public class AccountUtility {
	
	
	public static void main(String[] args) {
		
		AccountService ac = new AccountService();
		Scanner sc = new Scanner(System.in);
		Account newAccount = new Account();
		
		while(true) {
		
			System.out.println("1.Create Account\n2.Display Account\n3.Invest Money\n4.Withdraw Money\n5.Exit");
			
			
			
			
			int choice = sc.nextInt();
			
			
			switch (choice) {
				case 1:{
					newAccount = ac.createAccount();
					break;
				}
				case 2:{
					ac.displayAccount(newAccount);
					break;
				}
				
				case 3:{
					
					break;
					}
				case 4:{
					
					break;
					
				}
				case 5:{
					System.exit(0);
				}
				}
					
			
		}
	}

}
