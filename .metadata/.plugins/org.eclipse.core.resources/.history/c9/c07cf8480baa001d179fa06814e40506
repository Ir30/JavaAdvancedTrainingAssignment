package com.javatraining.entity;

abstract public class SavingsAccount extends Account {

	private double accountBalance;

	public String toString() {

		String res = String.format(getAccountCode() + "/n " + getAccountName() + "/n " + getOpeningDate() + "/n "
				+ getExpiryDate() + "/n " + getAccountBalance());
		return res;
	}

	public SavingsAccount(String accountName, String openingDate, String expiryDate) {
		super(accountName, openingDate, expiryDate);
		this.accountBalance = 0;
	}

	public double getAccountBalance() {
		return accountBalance;
	}

	public void setAccountBalance(double accountBalance) {
		this.accountBalance = accountBalance;
	}

}
